<div id="example">
    <div id="grid"></div>

    <script>
                $(document).ready(function () {
                    var crudServiceBaseUrl = "/odata/Award",
                        dataSource = new kendo.data.DataSource({
                            type: "odata-v4",
                            transport: {
                                read:  {
                                    url: crudServiceBaseUrl + "?$expand=Activities"
                                },
                                update: {
                                    url: function (options) {
                                        return crudServiceBaseUrl + "('" + options.Id + "')";

                                    }
                                },
                                destroy: {
                                    url: function (options) {
                                        return crudServiceBaseUrl + "('" + options.Id + "')";

                                    }
                                },
                                create: {
                                    url: crudServiceBaseUrl
                                },
                                parameterMap: function (options, operation) {
                                if (operation !== "read" && options) {
                                        return kendo.stringify(options);
                                    }
                                }
                            },
                            pageSize: 20,
                            schema: {
                                model: {
                                    id: "Id",
                                    fields: {
                                        Activities: {},
                                        //Id: {},
                                        //Name: { validation: { required: true } },
                                        //Quantity: {},
                                        //Level: {},
                                        //CoverUrl: {},
                                        //Description: {}
                                    }
                                }
                            }
                        });

                    $("#grid").kendoGrid({
                        dataSource: dataSource,
                        pageable: true,
                        height: 550,
                        toolbar: ["create"],
                        columns: [
                            { field: "Id" },
                            { field: "Name", width: "120px" },
                            {
                                field: "Activities", template: kendo.template($("#activityTemplate").html()),
                                editor: function (container, options) {
                                    var dropDownList = $('<select id="awards" style="width:100%"></select>');
                                    dropDownList.attr("name", options.field);
                                    dropDownList.appendTo(container);
                                    $("#awards").kendoMultiSelect({
                                        placeholder: "选择活动...",
                                        dataTextField: "Name",
                                        dataValueField: "Id",
                                        dataSource: {
                                            type: "odata-v4",
                                            serverFiltering: true,
                                            transport: {
                                                read: {
                                                    url: "/odata/Activity"
                                                }
                                            }
                                        }
                                    });
                                }
                            },
                            { field: "CoverUrl"},
                            { field: "Quantity" },
                            { field: "Level" },
                            { field: "Description", width: "120px" },
                            { command: ["edit", "destroy"], title: "&nbsp;", width: "150px" }],
                        editable: "popup",
                        edit:function(e)
                        {
                            e.container.find(".k-edit-label:first").hide();
                            e.container.find(".k-edit-field:first").hide();
                        }
                    });
                });
            </script>
            </div>

